<h1>Lista de Admnistradores</h1>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>E-mail</th>
        <%# add admin button %>
        <th>
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-outline-success btn-circle" do %>  
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @admins.each do |adm| %>
      <tr>
        <td><%= adm.id %></td>
        <td><%= adm.email %></td>
        <td style="width: 150px">
          <%# edit button %>
          <%= link_to edit_admins_backoffice_admin_path(adm), class:"btn btn-primary btn-circle" do %>  
            <i class="fa fa-edit"></i>
          <% end %>
          <%# delete button %>
          <%= link_to admins_backoffice_admin_path(adm), method: :delete, class:"btn btn-outline-danger btn-circle", data: { confirm: "Quer mesmo apagar esse administrador?"} do %>  
            <i class="fa fa-close"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>

  <div class="text-center">
    <%= paginate @admins %>
  </div>
  
</div>


<div class="bg-gradient" style="background-color: #8A2BE2">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block">
                <%= image_tag("pug.jpg", class:"w-100") %>
              </div> 
                <div class="col-lg-6">
                  <div class="p-5">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900">Entre com sua conta:</h1>
                    </div>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
                      <div class="form-group mt-4">
                        <%= f.email_field :email, autofocus: true, placeholder: "Entre com o e-mail...", class: "form-control form-control-user" %>
                      </div>

                      <div class="form-group mt-4">
                        <%= f.password_field :password, placeholder: "Sua senha", class: "form-control form-control-user" %>
                      </div>

                      <% if devise_mapping.rememberable? %>
                        <div class="form-group mt-5">
                          <label>
                            <%= f.check_box :remember_me%>Lembrar-me
                          </label>
                        </div>
                      <% end %>

                      <div class="actions mt-5">
                        <%= f.submit "Entrar", class:"btn btn-dark btn-user btn-block" %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

